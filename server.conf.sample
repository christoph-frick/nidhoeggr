#------------------------------------------------------------------------------
#
# config file for nidhoeggr server
#
# this is a sample of the config to use. all lines starting with a # are
# comments. line that are not needed are commented out - the default is shown
# and you should only change it, if you know what you do
#
#------------------------------------------------------------------------------

# fqdn or ip of this server
# this is mandatory and the value localhost will fail
servername = localhost

# run this server as an daemon
# daemon = 1

#------------------------------------------------------------------------------
# port config
#------------------------------------------------------------------------------

# port where the race list listens
# racelistport = 30197

# port where the server listens for broadcasts from gpl servers
# broadcastport = 30199

#------------------------------------------------------------------------------
# timeouts - all values in seconds
#------------------------------------------------------------------------------

# idle time of a user  until it gets dropped
# user_timeout = 3600

# idle time of a race until it gets dropped
# race_timeout = 300

# idle time of a race list server  until it gets dropped
# server_timeout = 90

#------------------------------------------------------------------------------
# server reproduction config
#------------------------------------------------------------------------------

# name and port of the server, this server starts to register to, if there is
# no server list locally available
# initserver_name = maserati.blw.net
# initserver_port = 30197

# time in seconds the server checks for updates on other servers
# server_update = 30

# maximal amount of requests the server wants
# server_maxload = 3

#------------------------------------------------------------------------------
# files
#------------------------------------------------------------------------------

# where to store the racelist
# file_racelist = racelist.cpickle

# where to store the serverlist
# file_serverlist = serverlist.cpickle

